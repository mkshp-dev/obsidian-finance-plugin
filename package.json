		"esbuild": "0.17.3",
		"esbuild-svelte": "^0.9.3",
		"obsidian": "latest",
		"svelte": "^4.2.20",
		"svelte-preprocess": "^6.0.3",
		"ts-node": "^10.9.2",
		"tslib": "2.4.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"chart.js": "^4.5.1",
